	"type": "module",
	"scripts": {
		"dev": "vite dev --host --port 3000",
		"dev-pub": "vite dev --port 3000",
		"build": "vite build",
		"preview": "vite preview --host --open --port 2127",
		"preview-pub": "vite preview --open --port 2127",
